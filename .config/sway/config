# Auto sleep and lock screen
# exec swayidle -w \
# timeout 600 'swaylock -f -c 000000' \
# timeout 900 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
# timeout 1800 'systemctl suspend' before-sleep 'swaylock -f -c 000000'

# Reload sway
bindsym $mod+Shift+c reload

# Menu
bindsym $mod+d exec $menu

# Shutdown (Alt+Shift+Q)
bindsym $mod+Shift+q exec systemctl poweroff

# Reboot (Alt+Shift+R)
bindsym $mod+Shift+r exec systemctl reboot

# Sleep (Alt+Shift+S)
bindsym $mod+Shift+s exec systemctl suspend

# Terminal
bindsym $mod+Shift+t exec foot

# Keyboard toggle
bindsym XF86AudioRaiseVolume exec ~/.config/sway/kbd_toggle.sh

# Log Off
bindsym $mod+Shift+l exec swaymsg exit

# Volume Down Key (show adjust menu)
bindsym XF86AudioLowerVolume exec ~/.config/sway/float_control.sh

# Bind screen rotation to keyboard shortcuts (optional)
bindsym $mod+Ctrl+r exec "swaymsg output * transform 90"
bindsym $mod+Ctrl+Shift+r exec "swaymsg output * transform 0"

# Take screenshot
bindgesture swipe:left exec "grim -t jpeg -q 80"

# Auto-rotate using sensor (if supported)
# exec_always /usr/libexec/iio-sensor-proxy

# Open Chromium
# exec chromium-browser --new-tab --incognito  http://localhost:8080 --kiosk
#exec chromium-browser --new-tab  http://localhost:8080

# Open waydroid
exec waydroid first-launch
exec ~/.config/sway/scripts/rot-waydroid.sh
